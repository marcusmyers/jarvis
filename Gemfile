source "https://rubygems.org"

gem "lita"

# Uncomment to use the HipChat adapter
# gem "lita-hipchat"

# Use Slack Adapter
gem "lita-slack"
gem "lita-slack-handler", :git => 'https://github.com/marcusmyers/lita-slack-handler.git'

# Uncomment to use the IRC adapter
# gem "lita-irc"

# Add handlers to give Lita new functionality.
# For example:
gem "lita-google-images"
gem "lita-karma"
